<section id="skills" class="container-large grid">
  <div class="col-2 resume-category">
		<h2>
			<svg aria-hidden="true">
				<use xlink:href="#terminal"></use>
			</svg>
			Skills
		</h2>
  </div>
  <div class="col-4 grid resume-content">
		<div class="col-2">
			<h3>Technical</h3>
			<ul>
				{% for skill in resume.skills.technical %}
					<li>{{ skill }}</li>
				{% endfor %}
			</ul>
		</div>
		<div class="col-2">
			<h3>Leadership</h3>
			<ul>
				{% for skill in resume.skills.leadership %}
					<li>{{ skill }}</li>
				{% endfor %}
			</ul>
		</div>
		<div class="col-2">
			<h3>Ecosystem</h3>
			<ul>
				<li>
					<strong>Languages</strong>
					<ul>
						{% for skill in resume.skills.tools.languages %}
							<li>{{ skill }}</li>
						{% endfor %}
					</ul>
				</li>
				{% comment %} <li>
					<strong>Frameworks</strong>
					<ul>
						{% for skill in resume.skills.tools.frameworks %}
							<li>{{ skill }}</li>
						{% endfor %}
					</ul>
				</li>
				<li>
					<strong>Ecosystem</strong>
					<ul>
						{% for skill in resume.skills.tools.ecosystem %}
							<li>{{ skill }}</li>
						{% endfor %}
					</ul>
				</li> {% endcomment %}
			</ul>
  	</div>
  </div>
</section>

<section id="experience" class="container-large grid">
  <div class="col-2 resume-category">
    <h2>
			<svg aria-hidden="true">
				<use xlink:href="#briefcase"></use>
			</svg>
			Experience
		</h2>
  </div>
  <div class="col-4 resume-content">
    <ul>
      {% for xp in resume.experience %}
        <li>
					<div class="resume-content-title">
						<strong>{{ xp.title }}</strong>
						<span class="resume-content-time">
							{{ xp.location }},
							<time datetime="{{ xp.timeline.duration }}">
								{{ xp.timeline.label }}
							</time>
						</span>
					</div>
					<div class="resume-content-subtitle">
						<img
							src="{{ xp.icon }}"
							class="resume-content-logo"
							loading="lazy"
							width="30px"
							height="30px"
							alt="Picture of the company logo from {{ xp.company }}"
							title="{{ xp.company }}"
						>
						{% if xp.url %}
							<a href="{{ xp.url }}" target="_blank">
						{% endif %}
						<strong>{{ xp.company }}</strong>
						{% if xp.url %}
							</a>
						{% endif %}
						{% if xp.note %}
							<span>({{ xp.note }})</span>
						{% endif %}
					</div>
          <ul class="resume-content-description">
            {% for resp in xp.responsibilities %}
              <li><span>{{ resp }}</span></li>
            {% endfor %}
          </ul>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>

<section id="education" class="container-large grid">
  <div class="col-2 resume-category">
    <h2>
			<svg aria-hidden="true">
				<use xlink:href="#book"></use>
			</svg>
			Education
		</h2>
  </div>
  <div class="col-4 resume-content">
    <ul>
      {% for edu in resume.education %}
        <li>
					<div class="resume-content-title">
						<strong>{{ edu.field }}</strong>
						<span class="resume-content-time">
							{{ edu.location }},
							<time datetime="{{ edu.timeline.duration }}">
								{{ edu.timeline.label }}
							</time>
						</span>
					</div>
					<div class="resume-content-subtitle">
						<img
							src="{{ edu.icon }}"
							class="resume-content-logo"
							loading="lazy"
							width="30px"
							height="30px"
							alt="Picture of the institution logo from {{ xp.company }}"
							title="{{ xp.company }}"
						>
						<a href="{{ edu.url }}" target="_blank">
							<strong>{{ edu.school }}</strong>
						</a>
					</div>
					<ul class="resume-content-description">
						<li>
							<span>
								{{ edu.status }}
							</span>
						</li>
					</ul>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>

<section id="certifications" class="container-large grid">
  <div class="col-2 resume-category">
    <h2>
			<svg aria-hidden="true">
				<use xlink:href="#award"></use>
			</svg>
			Certifications
		</h2>
  </div>
  <div class="col-4 resume-content">
    <ul class="grid">
      {% for cert in resume.certifications %}
        <li class="col-3 resume-content-box">
					{% if cert.badge %}
						<img
							src="{{ cert.badge }}"
							class="resume-content-box-badge"
							loading="lazy"
							title="Badge for the {{ cert.title }} certification"
							alt="Badge for the {{ cert.title }} certification"
						>
					{% endif %}
					<div class="resume-content-title">
						<strong>{{ cert.title }}</strong>
					</div>
					<div class="resume-content-subtitle">
						<a href="{{ cert.url }}" target="_blank">
							<strong>{{ cert.authority }}</strong>
						</a>,
						<span class="resume-content-time">
							<time datetime="{{ cert.timeline }}">{{ cert.timeline }}</time>
						</span>
					</div>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>

<section id="other" class="container-large grid">
  <div class="col-2 resume-category">
    <h2>
			<svg aria-hidden="true">
				<use xlink:href="#layers"></use>
			</svg>
			Other
		</h2>
  </div>
  <div class="col-4 grid resume-content">
		<div class="col-3">
			<h3>Languages</h3>
			<ul>
				{% for lang in resume.languages %}
					<li>
						<strong>{{ lang.language }}</strong>
						<span>{{ lang.proficiency }}</span>
					</li>
				{% endfor %}
			</ul>
		</div>
		<div class="col-3">
			<h3>Interests</h3>
			<ul>
				{% for interest in resume.interests %}
					<li>
						{{ interest }}
					</li>
				{% endfor %}
			</ul>
		</div>
  </div>
</section>
