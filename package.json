{
   "scripts": {
      "bundle": "browserify -e scripts/main.js > scripts/main.min.js",
      "compress": "uglifyjs scripts/main.min.js > assets/main.min.js -c",
      "js": "npm run bundle && npm run compress",
      "start": "npm run js && jekyll s --watch",
      "dev": "npm run js && jekyll build",
      "prod": "npm run js && JEKYLL_ENV=PROD jekyll build"
   },
   "browserify": {
      "transform": [["babelify", { "presets": ["es2015"] }]]
   },
   "devDependencies": {
      "babel-preset-es2015": "^6.6.x",
      "babelify": "^7.2.x",
      "browserify": "^13.0.x",
      "uglify-js": "^2.6.x"
   }
}
