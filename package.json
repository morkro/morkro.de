{
  "name": "morkro.de",
  "version": "1.0.0",
  "description": "Portfolio of Moritz Kröger",
  "homepage": "http://moritz.berlin",
  "author": "Moritz Kröger <write@morkro.de>",
  "scripts": {
    "bundle": "browserify -e scripts/main.js > scripts/main.min.js",
    "compress": "uglifyjs scripts/main.min.js > assets/main.min.js -c",
    "test": "eslint --ignore-path=.eslintignore scripts/",
    "js": "npm run bundle && npm run compress",
    "start": "npm run test && npm run js && jekyll s --watch",
    "dev": "npm run test && npm run js && jekyll build",
    "prod": "npm run test && npm run js && JEKYLL_ENV=PROD jekyll build"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "eslint": "3.5.x"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.6.x",
    "babelify": "^7.2.x",
    "browserify": "^13.0.x",
    "fontfaceobserver": "^2.0.4",
    "uglify-js": "^2.6.x"
  }
}
